// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Race {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  icon String
  factions FactionType[]
}

type FactionType {
  name String 
  icon String
}